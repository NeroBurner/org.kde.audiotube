{
    "id": "org.kde.audiotube",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "audiotube",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "separate-locales": false,
    "cleanup": [
        "/include/",
        "/share/cmake/"
    ],

    "modules": [
        "generated/python3-yt-dlp.json",
        "generated/python3-ytmusicapi.json",
        {
            "name": "pybind11",
            "config-opts": [
                "-DPYBIND11_FINDPYTHON=ON",
                "-DPYBIND11_TEST=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/pybind/pybind11",
                    "tag": "v2.9.1"
                }
            ]
        },
        {
            "name": "audiotube",
            "config-opts": [
                "-DPYBIND11_FINDPYTHON=ON"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/plasma-mobile/22.04/audiotube-22.04.tar.xz",
                    "sha256": "5d6861aa8089e7bc73a52e8dff3a7d55ae15a81ee3ad4c58094ca5f11dad3d75"
                }
            ]
        }
    ]
}

